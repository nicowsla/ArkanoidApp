<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/button</item>
        <item name="colorControlNormal">@color/button</item>
        <item name="colorControlActivated">@color/button</item>
        <item name="colorControlHighlight">@color/button</item>


    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_theme</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#FEFFDB</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColor">#FEFFDB</item>
        <item name="android:textColorHint">#FEFFDB</item>
    </style>

</resources>
