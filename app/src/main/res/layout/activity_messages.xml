<?xml version="1.0" encoding="utf-8"?>

<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#eceff1"
    tools:context="com.example.android.arkanoid.MessagesActivity">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="678dp"></androidx.recyclerview.widget.RecyclerView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/commenti_scrivi"
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint=" Manda un messaggio"
                        android:inputType="textLongMessage" />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/commenti_send"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#FFF"
                        android:clickable="true"
                        android:onClick="send"
                        android:src="@drawable/baseline_send_24"
                        android:visibility="visible"
                        app:rippleColor="#FFFFFF"
                        app:tint="#FFF" />
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>

</ScrollView>


