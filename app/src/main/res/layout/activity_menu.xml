<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_menu"
    tools:context=".MenuActivity"
    android:background="@drawable/background_menu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/menu_go_to_arcade"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:onClick="goToGame"
        android:text="@string/arcade_mode"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/menu_go_to_infinita"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:onClick="goToGame"
        android:text="@string/infinity_mode"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/menu_go_to_classificata"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:onClick="goToGame"
        android:text="@string/classified_challenga"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/menu_go_to_tema"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:onClick="goToGame"
        android:text="@string/theme_match"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:cornerRadius="15dp"/>

        <Button
            android:id="@+id/menu_go_to_landscape"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:onClick="goToGame"
            android:text="Landscape Mode"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/button"
            android:textColor="#000000"
            android:textStyle="bold"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="10"
            app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/menu_go_to_editlevel"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:onClick="goToShowLevels"
        android:text="@string/show_levels"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:cornerRadius="15dp"/>

    <Button
        android:id="@+id/menu_go_to_user_list"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="match_parent"
        android:onClick="goToUserList"
        android:text="@string/users"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button"
        android:textColor="#000000"
        android:textStyle="bold"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        app:cornerRadius="15dp"/>



    </LinearLayout>
    </ScrollView>
</androidx.drawerlayout.widget.DrawerLayout>