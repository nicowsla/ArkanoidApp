<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_menu"
    android:foregroundTint="@color/button"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <TextView
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:clickable="true"
        android:onClick="infoCommands"
        android:text="@string/commands_selector"
        android:textColor="@color/button"
        android:textSize="15dp"
        app:cornerRadius="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/settings_commandsc"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:ems="10"
        android:textColorHint="@color/button"
        app:boxStrokeColor="@color/button"
        app:helperTextTextAppearance="@color/button"
        app:endIconDrawable="@drawable/fab_add"
        app:endIconMode="custom"
        android:inputType="text"
        app:endIconTint="@color/button"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="235dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_commands"
            android:clickable="false"
            android:cursorVisible="false"
            android:textColor="@color/button"
            android:textColorHint="@color/button"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="80dp"
        android:layout_height="26dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="50dp"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="10"
        android:text="@string/languages_selector"
        android:textColor="@color/button"
        android:textSize="15dp"
        app:cornerRadius="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/settings_languagec"

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:errorEnabled="true"
        android:ems="10"
        android:textColorHint="@color/button"
        app:boxStrokeColor="@color/button"
        app:helperTextTextAppearance="@color/button"
        app:endIconDrawable="@drawable/fab_add"
        app:endIconMode="custom"
        app:endIconTint="@color/button"
        android:inputType="text"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="235dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/settings_language"
            android:clickable="false"
            android:textColor="@color/button"
            android:textColorHint="@color/button"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>